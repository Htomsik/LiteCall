<UserControl
    x:Class="LiteCall.Views.Pages.MainPV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:LiteCall.Infrastructure.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:LiteCall.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modalCutom="clr-namespace:ModalCutom;assembly=ModalCutom"
    xmlns:pages="clr-namespace:LiteCall.ViewModels.Pages"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">



    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/Lists.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:VisibilityConverter x:Key="VisibilityConverter" />
            <system:Double x:Key="PlusScale">2</system:Double>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73" />
            <ColumnDefinition Width="235" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>


        <!--  Меню серверов  -->
        <Grid Background="{StaticResource Background(Solid)}">
            <Grid.RowDefinitions>
                <RowDefinition Height="73" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ListView
                Grid.Row="1"
                ItemsSource="{Binding ServersMark}"
                SelectedItem="{Binding CurrentServer}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Width="45"
                            Height="45"
                            BorderBrush="{DynamicResource Fonts(Solid)}"
                            BorderThickness="1"
                            CornerRadius="22">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="{Binding Name}" />
                            <!--  Тригер для переключения видимости  -->
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding DataContext.VisibilitySwitchCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="0" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Border
                Width="45"
                Height="45"
                BorderBrush="{StaticResource Important(Solid)}"
                BorderThickness="1"
                CornerRadius="27"
                Visibility="{Binding VisibilitiStatus, UpdateSourceTrigger=PropertyChanged}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="{Binding CurrentServer.Name}" />
            </Border>

            <Button
                HorizontalAlignment="Center"
                Command="{Binding OpenModalCommaCommand}"
                CommandParameter="0"
                Style="{StaticResource IMGButton}"
                Visibility="{Binding VisibilitiStatus, Converter={StaticResource VisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
                <Button.Resources>
                    <StaticResource x:Key="Img" ResourceKey="PlusPath" />
                    <StaticResource x:Key="Scale" ResourceKey="PlusScale" />


                </Button.Resources>
            </Button>

        </Grid>






        <!--  Панель настроек и юзера  -->
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="{StaticResource Background3(Solid)}" />

        <Grid Column="1" Row="1">
            <StackPanel Orientation="Horizontal">

                <Border
                    Width="40"
                    Margin="5,0,0,0"
                    BorderBrush="{DynamicResource Fonts(Solid)}"
                    BorderThickness="1"
                    CornerRadius="20" />

                <TextBlock
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Account.Login}" />
            </StackPanel>
        </Grid>

        <modalCutom:ModalCustom
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            IsOpen="{Binding ModalStatus}">



            <Grid
                MinWidth="250"
                MinHeight="200"
                Background="{DynamicResource Background2(Solid)}">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    HorizontalAlignment="Center"
                    Style="{DynamicResource Bigtext}"
                    Text="CONNECT" />



                <TextBlock
                    Grid.Row="1"
                    Margin="5,0,0,8"
                    HorizontalAlignment="Center"
                    Text="IP ADRESS">

                    <TextBlock.Style>
                        <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>

                                <DataTrigger Binding="{Binding Text, ElementName=Iptb}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding IsEnabled, ElementName=PasswordTB}" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource Button2(Solid)}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>

                </TextBlock>

                <TextBox
                    x:Name="Iptb"
                    Grid.Row="1"
                    Margin="20,8"
                    MaxLength="17"
                    Style="{StaticResource LogPassTextBox}"
                    Text="{Binding ServerAdress, UpdateSourceTrigger=PropertyChanged}" />

                <Border
                    Grid.Row="1"
                    Height="2"
                    Margin="20,8"
                    VerticalAlignment="Bottom"
                    Background="{DynamicResource Fonts(Solid)}" />

                <Button
                    Grid.Row="2"
                    MaxWidth="125"
                    MaxHeight="40"
                    Margin="15"
                    Command="{Binding ConnectServerCommand}">
                    <TextBlock Text="OK" />
                </Button>

            </Grid>



        </modalCutom:ModalCustom>

    </Grid>
</UserControl>
