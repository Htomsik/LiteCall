<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  База  -->



    <!--  Для всех кнопок по умолчанию  -->
    <Style TargetType="{x:Type Button}">

        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource Fonts(Solid)}" />
        <Setter Property="BorderThickness" Value="2" />


        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>

            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource Button2(Solid)}" />
            </Trigger>
        </Style.Triggers>

    </Style>

    <!--  Для кнопок c  image  -->
    <Style x:Key="IMGButton" TargetType="{x:Type Button}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">

                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path
                            x:Name="Path"
                            Fill="{DynamicResource ResourceKey=Fill}"
                            RenderTransformOrigin="0.5, 0.5"
                            Style="{DynamicResource ResourceKey=Img}">

                            <Path.RenderTransform>

                                <ScaleTransform CenterX="0" CenterY="0" ScaleX="{DynamicResource ResourceKey=Scale}" ScaleY="{DynamicResource ResourceKey=Scale}" />

                            </Path.RenderTransform>

                        </Path>

                    </Border>


                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseCaptured" Value="True">
                            <Setter TargetName="Path" Property="Fill" Value="{StaticResource Button2(Solid)}" />
                        </Trigger>

                    </ControlTemplate.Triggers>


                </ControlTemplate>

            </Setter.Value>
        </Setter>


    </Style>






</ResourceDictionary>